<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.ssahai.institutionalresearch.ContactActivity">


    <ImageView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/logo"
        android:paddingBottom="0dp"
        android:adjustViewBounds="true"
        android:layout_marginBottom="0dp"
        />

    <TextView android:text="Institutional \nResearch"
        android:layout_width="wrap_content"
        android:textSize="10dp"
        android:gravity="center"
        android:textColor="#000000"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:id="@+id/logo_text"

        />


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/imageView2"
        android:layout_marginTop="50dp">




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/logo_text"
        >


    <TextView android:text="Mailing Address" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mailing_address_heading"
        android:textSize="30dp"

android:layout_marginTop="10dp"
        />


    <TextView android:text="\n
Texas Tech University \n
Department of Institutional Research \n
Box 42017 \n
Lubbock, Texas 79409-2017
\n
Phone Number: (806) 742-2166"

        android:layout_width="wrap_content"
        android:layout_below="@+id/mailing_address_heading"
        android:id="@+id/mailing_address"
        android:layout_height="wrap_content"
      android:gravity="start"
        android:textAlignment="textStart"

        />


    <TextView android:text="Physical Address" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/physical_address_heading"
        android:textSize="30dp"
        android:layout_below="@+id/mailing_address"
        android:layout_marginTop="30dp"
        />


    <TextView android:text="\n
Administration Building, 2nd Floor, Room #218 \n
15th Street and Boston Avenue \n
Lubbock, TX 79409-2017
\n
Phone Number: (806) 742-2106"

        android:layout_width="wrap_content"
        android:layout_below="@+id/physical_address_heading"
        android:id="@+id/physical_address"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:textAlignment="textStart"

        />

    <Button
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Map"
        android:id="@+id/button_map"
android:onClick="showMap"
android:layout_below="@+id/physical_address"
        android:padding="@null"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="30dp"
         />


    <Button
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/email"
        android:id="@+id/button_email"
android:onClick="sendEmail"
        android:padding="@null"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/physical_address"
        android:layout_marginTop="30dp"
        />

    </RelativeLayout>
    </ScrollView>

</RelativeLayout>
